--[[ 
   üìú Script de Spam M1 Automatique ‚Äì Par HighSkill974
   üîÑ Fonctionne sur tous les mobs avec HumanoidRootPart
   ‚öôÔ∏è Spam ultra rapide auto-ajust√© (minimum 5ms)
   üîó Ex√©cutable avec loadstring (voir en bas)
]]

-- === CONFIGURATION ===
local autoDelay = true -- true = auto, false = d√©lai fixe
local fixedDelay = 0.005 -- 5ms = max spam
local damageValue = 2 -- valeur par d√©faut de M1

-- === FONCTIONS UTILES ===
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer
local Character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()

-- D√©tection de RemoteEvent automatiquement
local M1Remote
for _, v in pairs(game:GetDescendants()) do
    if v:IsA("RemoteEvent") and v.Name == "RemoteEvent" then
        M1Remote = v
        break
    end
end
if not M1Remote then
    warn("‚ùå RemoteEvent non trouv√©")
    return
end

-- Fonction de spam
local lastFire = 0
local function fireM1()
    local now = tick()
    local delay = autoDelay and 0 or fixedDelay
    if now - lastFire >= delay then
        for i = 1, 4 do -- on envoie 4 FireServer √† chaque frame
            pcall(function()
                M1Remote:FireServer(damageValue)
            end)
        end
        lastFire = now
    end
end

-- Boucle d'ex√©cution ultra rapide
RunService.RenderStepped:Connect(fireM1)

print("‚úÖ Spam M1 activ√© - Adaptatif : " .. tostring(autoDelay) .. ", D√©lai : " .. tostring(fixedDelay) .. "s")
